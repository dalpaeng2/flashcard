<div class="container mx-auto p-4">
  <h1 class="text-2xl font-semibold mb-4">New Card</h1>
  <%= form_with(model: [ @deck, @card ], local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :front, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :front, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-opacity-50" %>
    </div>
    <div class="mb-4">
      <%= form.label :back, class: "block text-sm font-medium text-gray-700" %>
      <%= form.rich_text_area :back, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-opacity-50" %>
    </div>
    <div class="flex space-x-2">
      <%= form.submit "Create Card", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Cancel", deck_path(@deck), class: "btn" %>
    </div>
  <% end %>
</div>