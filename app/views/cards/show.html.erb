<div class="w-full flex flex-col items-center justify-center">
  <div class="container mx-auto p-4 bg-blue-100 w-full rounded-2xl">
    <h1 class="text-2xl font-semibold mb-4"><%= @card.front %></h1>
  </div>

  <div class="container mx-auto p-4 bg-blue-100 w-full rounded-2xl mt-4">
    <div class="mb-4"><%= @card.back.body.to_s %></div>
  </div>
  <div class="mt-4 mr-auto flex space-x-2">
    <%= link_to "Deck", deck_path(@deck), class: "btn" %>
    <%= link_to "Edit", edit_deck_card_path(@deck, @card), class: "btn" %>
    <%= button_to "Delete", deck_card_path(@deck, @card), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>
</div>