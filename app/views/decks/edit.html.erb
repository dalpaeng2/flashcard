<div class="container mx-auto p-4">
  <h1 class="text-2xl font-semibold mb-4">Edit Deck</h1>
  <%= form_with(model: @deck, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :name, class: "block text-gray-700" %>
      <%= form.text_field :name, class: "form-input mt-1 block w-full" %>
    </div>
    <div class="mb-4">
      <%= form.label :description, class: "block text-gray-700" %>
      <%= form.text_area :description, class: "form-input mt-1 block w-full" %>
    </div>
    <div class="mb-4">
    
    <div class="flex space-x-2 mt-2">
      <%= form.submit "Update Deck", class: "btn btn-primary" %>
      <%= link_to "Back", "javascript:history.back()", class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>

