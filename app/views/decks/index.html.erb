<div class="container mx-auto p-4">
  <div class="mb-4">
    <%= link_to "New Deck", new_deck_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
  <div class="container grid grid-cols-3 gap-4 mx-auto">
    <% @decks.each do |deck| %>
      <div class="border p-4 mb-4">
        <h2 class="text-xl font-semibold"><%= deck.name %></h2>
        <p class="text-gray-600"><%= deck.description %></p>
        <div class="flex space-x-2 mt-2">
          <%= link_to "Show", deck_path(deck), class: "btn" %>
          <%= link_to "Edit", edit_deck_path(deck), class: "btn" %>
          <%= button_to "Delete", deck_path(deck), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
