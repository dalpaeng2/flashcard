<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">New Deck</h1>
  <%= form_with model: @deck, local: true do |form| %>
    <% if @deck.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@deck.errors.count, "error") %> prohibited this deck from being saved:</h2>
        <ul>
          <% @deck.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-input" %>
    </div>

    <div class="field">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-input" %>
    </div>

    <div class="actions">
      <%= form.submit "Create Deck", class: "btn btn-primary hover:cursor-pointer" %>
      <%= link_to "Cancel", decks_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>