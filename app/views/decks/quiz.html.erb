<div data-controller="quiz" class="max-w-2xl mx-auto space-y-6">
  <!-- 퀴즈 헤더 -->
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @deck.name %> 퀴즈</h1>
    <p class="text-gray-600">플래시카드로 학습하고 기억력을 강화하세요</p>
  </div>

  <% if @current_card %>
    <!-- 카드 상태 배지 -->
    <div class="flex justify-center mb-6">
      <% if @current_card.new_card? %>
        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-blue-100 text-blue-800 border border-blue-200">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          새로운 카드
        </span>
      <% elsif @current_card.overdue? %>
        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-red-100 text-red-800 border border-red-200">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          복습 필요
        </span>
      <% else %>
        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-emerald-100 text-emerald-800 border border-emerald-200">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          정기 복습
        </span>
      <% end %>
    </div>

    <!-- 카드 앞면 -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden transform transition-all duration-300 hover:shadow-xl">
      <div class="bg-gradient-to-br from-blue-50 to-purple-50 px-8 py-12">
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-12 h-12 bg-blue-100 rounded-full mb-6">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-semibold text-gray-900 leading-relaxed">
            <%= @current_card.front %>
          </h2>
        </div>
      </div>
    </div>

    <!-- 카드 뒷면 (숨겨진 상태) -->
    <div data-quiz-target="cardBack" 
         class="hidden bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden transform transition-all duration-300">
      <div class="bg-gradient-to-br from-emerald-50 to-teal-50 px-8 py-12">
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-12 h-12 bg-emerald-100 rounded-full mb-6">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="text-lg text-gray-800 leading-relaxed prose prose-gray max-w-none">
            <%= @current_card.back %>
          </div>
        </div>
      </div>
    </div>

    <!-- 액션 버튼들 -->
    <div class="space-y-6">
      <!-- 답 보기 버튼 -->
      <div class="text-center">
        <button data-quiz-target="showAnswerBtn" 
                data-action="click->quiz#showAnswer" 
                class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white font-semibold rounded-xl shadow-lg transition-all duration-200 transform hover:scale-105 focus:outline-none focus:ring-4 focus:ring-blue-300">
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
          </svg>
          답 확인하기
        </button>
      </div>
      
      <!-- 시간 선택 버튼들 (숨겨진 상태) -->
      <div data-quiz-target="timeButtons" class="hidden">
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
          <div class="text-center mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">다음 복습 시간을 선택하세요</h3>
            <p class="text-sm text-gray-600">얼마나 잘 기억하고 있는지에 따라 선택해주세요</p>
          </div>
          
          <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
            <button data-action="click->quiz#selectTime" 
                    data-minutes="10" 
                    data-card-id="<%= @current_card.id %>" 
                    class="flex flex-col items-center p-4 bg-red-50 hover:bg-red-100 border-2 border-red-200 hover:border-red-300 rounded-xl transition-all duration-200 group">
              <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center mb-2 group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              </div>
              <span class="text-sm font-semibold text-red-700">10분 후</span>
              <span class="text-xs text-red-600">다시 학습</span>
            </button>
            
            <button data-action="click->quiz#selectTime" 
                    data-minutes="60" 
                    data-card-id="<%= @current_card.id %>" 
                    class="flex flex-col items-center p-4 bg-orange-50 hover:bg-orange-100 border-2 border-orange-200 hover:border-orange-300 rounded-xl transition-all duration-200 group">
              <div class="w-10 h-10 bg-orange-500 rounded-full flex items-center justify-center mb-2 group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <span class="text-sm font-semibold text-orange-700">1시간 후</span>
              <span class="text-xs text-orange-600">어려움</span>
            </button>
            
            <button data-action="click->quiz#selectTime" 
                    data-minutes="1440" 
                    data-card-id="<%= @current_card.id %>" 
                    class="flex flex-col items-center p-4 bg-emerald-50 hover:bg-emerald-100 border-2 border-emerald-200 hover:border-emerald-300 rounded-xl transition-all duration-200 group">
              <div class="w-10 h-10 bg-emerald-500 rounded-full flex items-center justify-center mb-2 group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <span class="text-sm font-semibold text-emerald-700">1일 후</span>
              <span class="text-xs text-emerald-600">보통</span>
            </button>
            
            <button data-action="click->quiz#selectTime" 
                    data-minutes="10080" 
                    data-card-id="<%= @current_card.id %>" 
                    class="flex flex-col items-center p-4 bg-blue-50 hover:bg-blue-100 border-2 border-blue-200 hover:border-blue-300 rounded-xl transition-all duration-200 group">
              <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center mb-2 group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <span class="text-sm font-semibold text-blue-700">1주일 후</span>
              <span class="text-xs text-blue-600">쉬움</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <!-- 카드 없음 상태 -->
    <div class="text-center py-16">
      <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-gray-900 mb-2">퀴즈할 카드가 없습니다</h3>
      <p class="text-gray-600 mb-8">이 덱에 카드를 추가하여 학습을 시작해보세요!</p>
      <%= link_to "덱으로 돌아가기", deck_path(@deck), 
          class: "inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-xl transition-colors" %>
    </div>
  <% end %>
</div>
