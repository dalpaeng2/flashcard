<div>
  <% @deck = Deck.find(params[:id]) %>
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-semibold mb-4"><%= @deck.name %></h1>
    <p class="text-gray-600 mb-4"><%= @deck.description %></p>
    <div class="flex space-x-2 mt-2">
      <%= link_to "Quiz", quiz_deck_path(@deck), class: "btn" %>
      <%= link_to "Edit", edit_deck_path(@deck), class: "btn" %>
      <%= button_to "Delete", deck_path(@deck), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>

  <div class="container mx-auto p-4">
    <h2 class="text-xl font-semibold mb-4">Cards in this Deck</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @deck.cards.each do |card| %>
        <div class="border p-4 mb-4">
          <h3 class="text-lg font-semibold"><%= card.front %></h3>
          <div class="flex space-x-2 mt-2">
            <%= link_to "Show", deck_card_path(@deck, card), class: "btn" %>
            <%= link_to "Edit", edit_deck_card_path(@deck, card), class: "btn" %>
            <%= button_to "Delete", deck_card_path(@deck, card), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="mt-4">
      <%= link_to "Add New Card", new_deck_card_path(@deck), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>